<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.crappbytes.biketracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Minimum Android 4.0 -->
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <!-- We need to access our current position. We do this only by using GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Permission to write data (export tracks) to the external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_biketracker"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.crappbytes.biketracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Only portrait orientation for TrackActivity -->
        <activity
            android:name="org.crappbytes.biketracker.TrackActivity"
            android:label="@string/title_activity_track"
            android:parentActivityName="org.crappbytes.biketracker.MainActivity"
            android:screenOrientation="portrait" >

            <!-- Use meta-data for Android version older than 4.1 to get default navigation behavior -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.crappbytes.biketracker.MainActivity" />
        </activity>
        <activity
            android:name="org.crappbytes.biketracker.TrackContainerActivity"
            android:label="@string/title_activity_track_container"
            android:parentActivityName="org.crappbytes.biketracker.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.crappbytes.biketracker.MainActivity" />
        </activity>
        <activity android:name="org.crappbytes.biketracker.SettingsActivity"
                android:label="@string/settings"/>

        <service
            android:name="org.crappbytes.biketracker.GPSLoggerBackgroundService"
            android:label="GPSBackgroundService" >
        </service>

        <provider
            android:name="org.crappbytes.biketracker.contentprovider.TracksContentProvider"
            android:authorities="org.crappbytes.biketracker.contentprovider"
            android:exported="false" >
        </provider>
        
    </application>

</manifest>