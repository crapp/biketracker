<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/tracklist_selector" >
    
    <ImageView
        android:id="@+id/rowMapImage"
        android:layout_alignParentLeft="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Will show a map image"
        />

    <TextView
        android:id="@+id/rowTrackName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rowMapImage"
        android:text="TrackName"
        android:textAlignment="center" />
    
    <LinearLayout 
        android:layout_below="@id/rowTrackName"
        android:layout_toRightOf="@id/rowMapImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        
        <TextView 
        	android:id="@+id/rowTrackDistance"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Distance"
        	android:textSize="11sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_biketracker_distance"
            android:drawablePadding="2dp"/>
        <TextView 
        	android:id="@+id/rowTrackTotalHeight"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="TotalHeight"
        	android:textSize="11sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_mountain"
            android:drawablePadding="2dp"/>
        <TextView 
        	android:id="@+id/rowTrackDate"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:text="Date"
        	android:textSize="11sp"  />
    </LinearLayout>
</LinearLayout>