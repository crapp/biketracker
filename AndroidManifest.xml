<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.crappbytes.biketracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.crappbytes.biketracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.crappbytes.biketracker.TrackActivity"
            android:label="@string/title_activity_track" 
            android:parentActivityName="org.crappbytes.biketracker.MainActivity" >
            <!-- Use meta-data for Android version older than 4.1 to get default navigation behavior -->
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.crappbytes.biketracker.MainActivity"/>
        </activity>
    </application>

</manifest>